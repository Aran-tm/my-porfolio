---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "SVGL - A beatiful library with SVG Logos",
    description:
      "Created from scratch with Next.js and Tailwind CSS It's a library with SVG Logos from the most popular brands. Optimized fir SEO and performance.",
    link: "https://svgl.vercel.app",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/svgl.webp", // esta es una imagen de prueba para mis proyectos
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-3" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>

      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura del proyecto ${image}`}
      />
    </article>
  ))
}
